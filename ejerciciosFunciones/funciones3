def cercano(lista, numero):
    elementoCercano=lista[0]
    for elemento in lista:
        if abs(elemento - numero) < abs(elementoCercano - numero):
            elementoCercano=elemento
    return elementoCercano

lista=[3,5,12,15,22]
numero=30
print(f"Elemento mÃ¡s cercano a {numero} en la lista: {cercano(lista, numero)}")

